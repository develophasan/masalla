{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "CI=false yarn install && CI=false yarn build"
  },
  "deploy": {
    "startCommand": "npx serve -s build -l ${PORT:-3000}",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
